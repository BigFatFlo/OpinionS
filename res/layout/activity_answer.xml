<ScrollView 
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:background="@drawable/background_2" >

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="${packageName}.${activityClass}" >
    
    <TextView 
        android:id="@+id/answer_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="@string/answer_button"
        android:textSize="18sp"
        />
    
    <TextView
        android:id="@+id/asker_info_a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/answer_title"
        android:text="@string/asker_info"
        android:textSize="16sp"
        />
    
    <TextView
        android:id="@+id/countdown_a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/asker_info_a"
        android:layout_centerHorizontal="true" 
        android:layout_marginTop="10dp"
        android:text="@string/countdown"
        android:textColor="@color/darkBlue"
        />
    
    <ImageView
        android:id="@+id/question_mark_a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:src="@drawable/question_mark"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp"
		android:layout_alignTop="@+id/question_view_a"
        android:contentDescription="@string/delete"       
        />
    
    <TextView
        android:id="@+id/question_view_a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_toRightOf="@id/question_mark_a"
        android:layout_below="@id/countdown_a"
        android:text="@string/question_view"
        android:paddingTop="20dp"
        android:paddingBottom="30dp"
        android:paddingRight="20dp"
        android:textSize="16sp"
        />
    
    <TableLayout
    	android:id="@+id/answers_layout"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:layout_below="@id/question_view_a" 
    	android:layout_marginBottom="10dp"
    	android:shrinkColumns="1"
    	android:weightSum="100"
    	>
        
        <TableRow 
		    android:layout_marginBottom="10dp" >
		    
		    <ImageView
		        android:id="@+id/one_a"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginRight="5dp"
		        android:layout_marginLeft="5dp"
		        android:layout_weight="10"
		        android:src="@drawable/one"
		        android:layout_gravity="center"
		        android:contentDescription="@string/delete"       
		        />
		    
		    <TextView
		        android:id="@+id/answer1_a"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_weight="80"
		        android:layout_gravity="center_vertical"
		        android:text="@string/answer1"
		        android:textSize="16sp"
		        />
		    
		    <ImageButton
		        android:id="@+id/choose_answer1"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_weight="10"
		        android:layout_gravity="center"
		        android:background="@android:color/transparent"
		        android:contentDescription="@string/delete"
		        android:padding="8dp"
		        android:src="@drawable/button_approve" 
		        />
    
    	</TableRow>
    
    	<TableRow 
		    android:layout_marginBottom="10dp" >
		    
		    <ImageView
		        android:id="@+id/two_a"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginRight="5dp"
		        android:layout_marginLeft="5dp"
		        android:layout_weight="10"
		        android:src="@drawable/two"
		        android:layout_gravity="center"
		        android:contentDescription="@string/delete"       
		        />
		    
		    <TextView
		        android:id="@+id/answer2_a"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_weight="80"
		        android:layout_gravity="center_vertical"
		        android:text="@string/answer2"
		        android:textSize="16sp"
		        />
		    
		    <ImageButton
		        android:id="@+id/choose_answer2"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_weight="10"
		        android:padding="8dp"
		        android:layout_gravity="center"
		        android:background="@android:color/transparent"
		        android:contentDescription="@string/delete"
		        android:src="@drawable/button_approve" 
		        />
		    
    	</TableRow>
    
    	<TableRow  
		    android:layout_marginBottom="10dp" >
		    
		    <ImageView
		        android:id="@+id/three_a"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginRight="5dp"
		        android:layout_marginLeft="5dp"
		        android:layout_weight="10"
		        android:src="@drawable/three"
		        android:layout_gravity="center"
		        android:contentDescription="@string/delete"       
		        />
		    
		    <TextView
		        android:id="@+id/answer3_a"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_weight="80"
		        android:layout_gravity="center_vertical"
		        android:text="@string/answer3"
		        android:textSize="16sp"
		        />
		    
		    <ImageButton
		        android:id="@+id/choose_answer3"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_weight="10"
		        android:padding="8dp"
		        android:layout_gravity="center"
		        android:background="@android:color/transparent"
		        android:contentDescription="@string/delete"
		        android:src="@drawable/button_approve" 
		        />
		    
    	</TableRow>
    
    	<TableRow  
		    android:layout_marginBottom="10dp" >
		    
		    <ImageView
		        android:id="@+id/four_a"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginRight="5dp"
		        android:layout_marginLeft="5dp"
		        android:layout_weight="10"
		        android:src="@drawable/four"
		        android:layout_gravity="center"
		        android:contentDescription="@string/delete"       
		        />
		    
		    <TextView
		        android:id="@+id/answer4_a"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_weight="80"
		        android:layout_gravity="center_vertical"
		        android:text="@string/answer4"
		        android:textSize="16sp"
		        />
		    
		    <ImageButton
		        android:id="@+id/choose_answer4"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_weight="10"
		        android:padding="8dp"
		        android:layout_gravity="center"
		        android:background="@android:color/transparent"
		        android:contentDescription="@string/delete"
		        android:src="@drawable/button_approve" 
		        />
    
    	</TableRow>
    

    	<TableRow  
		    android:layout_marginBottom="10dp" >
		    
		    <ImageView
		        android:id="@+id/five_a"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginRight="5dp"
		        android:layout_marginLeft="5dp"
		        android:layout_weight="10"
		        android:src="@drawable/five"
		        android:layout_gravity="center"
		        android:contentDescription="@string/delete"       
		        />
		    
		    <TextView
		        android:id="@+id/answer5_a"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_weight="80"
		        android:layout_gravity="center_vertical"
		        android:text="@string/answer5"
		        android:textSize="16sp"
		        />
		    
		    <ImageButton
		        android:id="@+id/choose_answer5"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_weight="10"
		        android:padding="8dp"
		        android:layout_gravity="center"
		        android:background="@android:color/transparent"
		        android:contentDescription="@string/delete"
		        android:src="@drawable/button_approve" 
		        />
    
    	</TableRow>
    
    </TableLayout>

    <Button
        android:id="@+id/submit_answer_button"
        style="@style/ButtonStyle"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/answers_layout"
        android:text="@string/submit" 
        />
    
</RelativeLayout>

</ScrollView>
