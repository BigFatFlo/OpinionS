<ScrollView
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:background="@drawable/background_2">

<RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="${packageName}.${activityClass}" >
        
     <TextView 
        android:id="@+id/results_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="@string/results_title"
        android:textSize="18sp"
        />
     
     <TextView
        android:id="@+id/asker_info_r"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/results_title"
        android:text="@string/asker_info"
        android:textSize="16sp"
        />
     
     <TextView
        android:id="@+id/date_info_r"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/asker_info_r"
        android:text="@string/date_info"
        android:paddingBottom="20dp"
        android:textSize="16sp"
        />
    
    <ImageView
        android:id="@+id/question_mark_r"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:src="@drawable/question_mark"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp"
		android:layout_alignTop="@+id/question_view_r"
        android:contentDescription="@string/delete"       
        />
    
    <TextView
        android:id="@+id/question_view_r"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_toRightOf="@id/question_mark_r"
        android:layout_below="@id/date_info_r"
        android:text="@string/question_view"
        android:paddingTop="20dp"
        android:paddingBottom="30dp"
        android:paddingRight="10dp"
        android:textSize="16sp"
        />
    
    <LinearLayout
    	android:id="@+id/results_layout"
    	android:orientation="vertical"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:layout_below="@id/question_view_r" 
    	android:layout_marginBottom="10dp"
    	android:shrinkColumns="1"
    	android:weightSum="100"
    	>
    	
    	<TableRow  
		    android:layout_marginBottom="10dp" 
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content">
    	    
		    <ImageView
		        android:id="@+id/one_r"
		        android:layout_width="0dp"
		        android:layout_height="wrap_content"
		        android:layout_weight="7"
		        android:src="@drawable/one"
		        android:layout_gravity="center"
		        android:layout_marginRight="5dp"
		        android:layout_marginLeft="5dp"
		        android:contentDescription="@string/delete"       
		        />
		    
		    <TextView
		        android:id="@+id/answer1_r"
		        android:layout_width="0dp"
		        android:layout_height="wrap_content"
		        android:layout_weight="63"
		        android:layout_gravity="center_vertical"
		        android:gravity="left"
		        android:text="@string/answer1"
		        />
		    
		    <TextView
		        android:id="@+id/n_answer1"
		        android:layout_width="0dp"
		        android:layout_height="wrap_content"
		        android:layout_weight="15"
		        android:lines="1"
		        android:layout_marginLeft="5dp"
		        android:layout_marginRight="5dp"
		        android:layout_gravity="center_vertical"
		        android:gravity="right"
		        android:text="10.4"
		        />
		    
		    <TextView
		        android:id="@+id/pc1"
		        android:layout_width="0dp"
		        android:layout_height="wrap_content"
		        android:layout_weight="15"
		        android:lines="1"
		        android:layout_marginRight="5dp"
		        android:layout_gravity="center_vertical"
		        android:gravity="right"
		        android:text="1.4"
		        />
		    
        </TableRow>
        
		<TableRow  
		    android:layout_marginBottom="10dp"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content" >
		    
		    <ImageView
		        android:id="@+id/two_r"
		        android:layout_width="0dp"
		        android:layout_height="wrap_content"
		        android:layout_weight="7"
		        android:src="@drawable/two"
		        android:layout_gravity="center"
		        android:layout_marginRight="5dp"
		        android:layout_marginLeft="5dp"
		        android:contentDescription="@string/delete"       
		        />
		    
		    <TextView
		        android:id="@+id/answer2_r"
		        android:layout_width="0dp"
		        android:layout_height="wrap_content"
		        android:layout_weight="63"
		        android:layout_gravity="center_vertical"
		        android:gravity="left"
		        android:text="@string/answer2"
		        />
		    
		    <TextView
		        android:id="@+id/n_answer2"
		        android:layout_width="0dp"
		        android:layout_height="wrap_content"
		        android:layout_weight="15"
		        android:lines="1"
		        android:layout_marginLeft="5dp"
		        android:layout_marginRight="5dp"
		        android:layout_gravity="center_vertical"
		        android:gravity="right"
		        android:text="10.4"
		        />
		    
		    <TextView
		        android:id="@+id/pc2"
		        android:layout_width="0dp"
		        android:layout_height="wrap_content"
		        android:layout_weight="15"
		        android:lines="1"
		        android:layout_marginRight="5dp"
		        android:layout_gravity="center_vertical"
		        android:gravity="right"
		        android:text="1.4"
		        />
		    
        </TableRow>
        
		<TableRow  
		    android:layout_marginBottom="10dp"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content" >
		    
		    <ImageView
		        android:id="@+id/three_r"
		        android:layout_width="0dp"
		        android:layout_height="wrap_content"
		        android:layout_weight="7"
		        android:src="@drawable/three"
		        android:layout_gravity="center"
		        android:layout_marginRight="5dp"
		        android:layout_marginLeft="5dp"
		        android:contentDescription="@string/delete"       
		        />
		    
		    <TextView
		        android:id="@+id/answer3_r"
		        android:layout_width="0dp"
		        android:layout_height="wrap_content"
		        android:layout_weight="63"
		        android:layout_gravity="center_vertical"
		        android:gravity="left"
		        android:text="@string/answer3"
		        />
		    
		    <TextView
		        android:id="@+id/n_answer3"
		        android:layout_width="0dp"
		        android:layout_height="wrap_content"
		        android:layout_weight="15"
		        android:lines="1"
		        android:layout_marginLeft="5dp"
		        android:layout_marginRight="5dp"
		        android:layout_gravity="center_vertical"
		        android:gravity="right"
		        android:text="10.4"
		        />
		    
		    <TextView
		        android:id="@+id/pc3"
		        android:layout_width="0dp"
		        android:layout_height="wrap_content"
		        android:layout_weight="15"
		        android:lines="1"
		        android:layout_marginRight="5dp"
		        android:layout_gravity="center_vertical"
		        android:gravity="right"
		        android:text="1.4"
		        />
		    
        </TableRow>
        
		<TableRow  
		    android:layout_marginBottom="10dp" 
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content">
		    
		    <ImageView
		        android:id="@+id/four_r"
		        android:layout_width="0dp"
		        android:layout_height="wrap_content"
		        android:layout_weight="7"
		        android:src="@drawable/four"
		        android:layout_gravity="center"
		        android:layout_marginRight="5dp"
		        android:layout_marginLeft="5dp"
		        android:contentDescription="@string/delete"       
		        />
		    
		    <TextView
		        android:id="@+id/answer4_r"
		        android:layout_width="0dp"
		        android:layout_height="wrap_content"
		        android:layout_weight="63"
		        android:layout_gravity="center_vertical"
		        android:gravity="left"
		        android:text="@string/answer4"
		        />
		    
		    <TextView
		        android:id="@+id/n_answer4"
		        android:layout_width="0dp"
		        android:layout_height="wrap_content"
		        android:layout_weight="15"
		        android:lines="1"
		        android:layout_marginLeft="5dp"
		        android:layout_marginRight="5dp"
		        android:layout_gravity="center_vertical"
		        android:gravity="right"
		        android:text="10.4"
		        />
		    
		    <TextView
		        android:id="@+id/pc4"
		        android:layout_width="0dp"
		        android:layout_height="wrap_content"
		        android:layout_weight="15"
		        android:lines="1"
		        android:layout_marginRight="5dp"
		        android:layout_gravity="center_vertical"
		        android:gravity="right"
		        android:text="1.4"
		        />
		    
        </TableRow>
        
		<TableRow  
		    android:layout_marginBottom="10dp" 
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content">
		    
		    <ImageView
		        android:id="@+id/five_r"
		        android:layout_width="0dp"
		        android:layout_height="wrap_content"
		        android:layout_weight="7"
		        android:src="@drawable/five"
		        android:layout_gravity="center"
		        android:layout_marginRight="5dp"
		        android:layout_marginLeft="5dp"
		        android:contentDescription="@string/delete"       
		        />
		    
		    <TextView
		        android:id="@+id/answer5_r"
		        android:layout_width="0dp"
		        android:layout_height="wrap_content"
		        android:layout_weight="63"
		        android:layout_gravity="center_vertical"
		        android:gravity="left"
		        android:text="@string/answer5"
		        />
		    
		    <TextView
		        android:id="@+id/n_answer5"
		        android:layout_width="0dp"
		        android:layout_height="wrap_content"
		        android:layout_weight="15"
		        android:lines="1"
		        android:layout_marginLeft="5dp"
		        android:layout_marginRight="5dp"
		        android:layout_gravity="center_vertical"
		        android:gravity="right"
		        android:text="10.4"
		        />
		    
		    <TextView
		        android:id="@+id/pc5"
		        android:layout_width="0dp"
		        android:layout_height="wrap_content"
		        android:layout_weight="15"
		        android:lines="1"
		        android:layout_marginRight="5dp"
		        android:layout_gravity="center_vertical"
		        android:gravity="right"
		        android:text="1.4"
		        />
		    
        </TableRow>
        
		<TableRow  
		    android:layout_marginBottom="10dp" 
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content">
		    
		    <TextView
		        android:layout_width="0dp"
		        android:layout_height="wrap_content"
		        android:layout_weight="7"
		        android:layout_gravity="center"
		        android:layout_marginRight="5dp"
		        android:layout_marginLeft="5dp"      
		        />
		    
		    <TextView
		        android:id="@+id/total"
		        android:layout_width="0dp"
		        android:layout_height="wrap_content"
		        android:layout_weight="63"
		        android:layout_gravity="center_vertical"
		        android:gravity="left"
		        android:text="@string/total"
		        />
		    
		    <TextView
		        android:id="@+id/results_total_n"
		        android:layout_width="0dp"
		        android:layout_height="wrap_content"
		        android:layout_weight="15"
		        android:lines="1"
		        android:layout_marginLeft="5dp"
		        android:layout_marginRight="5dp"
		        android:layout_gravity="center_vertical"
		        android:gravity="right"
		        android:text="10.4"
		        />
		    
		    <TextView
		        android:id="@+id/pcTotal"
		        android:layout_width="0dp"
		        android:layout_height="wrap_content"
		        android:layout_weight="15"
		        android:lines="1"
		        android:layout_marginRight="5dp"
		        android:layout_gravity="center_vertical"
		        android:gravity="right"
		        android:text="1.4"
		        />
		    
        </TableRow>    
    
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/share_buttons"
        android:orientation="horizontal"
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
        android:layout_below="@id/results_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        >
    <Button
        android:id="@+id/share_button_email"
        android:layout_weight="1"
		style="@style/ButtonStyle"
        android:text="Mail" />
    <Button
        android:id="@+id/share_button_facebook"
        android:layout_weight="1"
		style="@style/ButtonStyle"
        android:text="Facebook" />
    <Button
        android:id="@+id/share_button_twitter"
        android:layout_weight="1"
		style="@style/ButtonStyle"
        android:text="Twitter" />
    
    </LinearLayout>
    
    <Button
        android:id="@+id/subscribe_button"
		style="@style/ButtonStyle"
		android:layout_below="@id/share_buttons"
        android:layout_centerHorizontal="true"
        android:text="@string/subscribe" />
    
    <Button
        android:id="@+id/saveResults_button"
		style="@style/ButtonStyle"
		android:layout_below="@id/subscribe_button"
        android:layout_centerHorizontal="true"
        android:text="@string/saveResults" />
    
    <Button
        android:id="@+id/backToMenu_button"
		style="@style/ButtonStyle.LogOut"
		android:layout_below="@id/saveResults_button"
        android:layout_centerHorizontal="true"
        android:text="@string/BTM" />
    
</RelativeLayout>

</ScrollView>
